@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Återställ lösenord";
}

<div class="box-center-content">
    <h2>@ViewData["Title"]</h2>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="Input.Code" type="hidden" />
        <div class="form-group">
            <label class="form-label" asp-for="Input.Email"></label>
            <input class="form-input" asp-for="Input.Email" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Input.Password"></label>
            <input class="form-input" asp-for="Input.Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="form-label" asp-for="Input.ConfirmPassword"></label>
            <input class="form-input" asp-for="Input.ConfirmPassword" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Återställ</button>
    </form>
</div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
